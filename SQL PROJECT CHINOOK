-- NEXT: It shows a table with all the amount of registries in each table in the DB, for perspective.
 
SELECT 'artists' AS table_name, COUNT(*) AS total_rows FROM artists
UNION ALL
SELECT 'albums', COUNT(*) FROM albums
UNION ALL
SELECT 'genres', COUNT(*) FROM genres
UNION ALL
SELECT 'media_types', COUNT(*) FROM media_types
UNION ALL
SELECT 'tracks', COUNT(*) FROM tracks
UNION ALL
SELECT 'playlists', COUNT(*) FROM playlists
UNION ALL
SELECT 'playlist_track', COUNT(*) FROM playlist_track
UNION ALL
SELECT 'customers', COUNT(*) FROM customers
UNION ALL
SELECT 'invoices', COUNT(*) FROM invoices
UNION ALL
SELECT 'invoice_items', COUNT(*) FROM invoice_items
UNION ALL
SELECT 'employees', COUNT(*) FROM employees;

--IT IS DIVIDED BY 4 BLOCKS OF QUERIES WITH DIFFERENT VARIATION IN DIFFICULTY: 1-BASIC, 2- SUBQUERIES, 3- CTEs and 4-WINDOWS FUNCTIONS. 

-- FIRST BLOCK- 17 QUESTIONS OF BASIC SQL

-- Q1) Which countries generate the most total revenue and how many customers contribute to that revenue?

SELECT  country, 
        COUNT(DISTINCT c.CustomerId) AS Total_customers,
        SUM(i.Total) AS Total_Sales
FROM customers c INNER JOIN invoices i USING (CustomerId)
JOIN
GROUP BY country
ORDER BY Total_Sales DESC;

-- Q2) Which music genres generate the most total revenue?

SELECT  g.Name AS Genre,
        SUM(ii.UnitPrice * ii.Quantity) AS total_sales
FROM invoice_items ii JOIN tracks t 
    USING(TrackId)
JOIN genres g 
    USING(GenreId)
GROUP BY g.Name
ORDER BY total_sales DESC;

--Q3) Which Sales Agent has the highest average purchase per invoice among their customers?

SELECT  e.FirstName || ' ' || e.LastName AS Sales_Agent,
        ROUND(AVG(i.Total), 2) AS Avg_invoice_amount
FROM employees e JOIN customers c 
    ON e.EmployeeId = c.SupportRepId
JOIN invoices i
    USING (CustomerId)
GROUP BY e.EmployeeId
ORDER BY avg_invoice_amount DESC;

--Q4) Who are the customers who buy the most on average?

SELECT  c.FirstName || ' ' || c.LastName AS Client,
        ROUND(AVG(i.Total), 2) AS Avg_invoice_amount
FROM customers c JOIN invoices i
    USING (CustomerId)
GROUP BY c.CustomerId
ORDER BY avg_invoice_amount DESC;

-- Q5) Show Customers (their full names, customer ID, and country) who are not in the US. (Hint: != or <> can be used to say "is not equal to")

SELECT  CustomerId,
        FirstName || ' ' || LastName AS Full_Name,
        Country
FROM customers
WHERE Country != 'USA'
ORDER BY Country, FirstName;

-- Q6) Show only the Customers from Brazil. 

SELECT  *
FROM customers
WHERE Country = 'Brazil';

-- Q7) Find the Invoices of customers who are from Brazil. The resulting table should show the customer's full name, Invoice ID, Date of the invoice, and billing country.

SELECT  c.LastName || ' ' || c.FirstName AS Client,
        i.InvoiceId,
        i.InvoiceDate,
        i.BillingCountry
FROM Customers c JOIN Invoices i USING (CustomerId)
WHERE Country = 'Brazil'
ORDER BY c.LastName, InvoiceDate DESC;

-- Q8) Show the Employees who are Sales Agents and the total amount sales they have made

SELECT  e.*,
        SUM(i.Total) AS Total_amount_sold
FROM employees e JOIN customers c 
    ON e.EmployeeId = c.SupportRepId
JOIN invoices i
    USING (CustomerId)
GROUP BY e.EmployeeId
ORDER BY Total_amount_sold DESC;

-- Q9) Find a unique/distinct list of billing countries from the Invoice table.

SELECT DISTINCT BillingCountry
FROM invoices;

-- Q10) Provide a query that shows the invoices associated with each sales agent. The resulting table should include the Sales Agent's full name.

SELECT
  e.FirstName || ' ' || e.LastName AS sales_agent,
  i.InvoiceId
FROM employees e
JOIN customers c
  ON e.EmployeeId = c.SupportRepId
JOIN invoices i
  USING (CustomerId) 
ORDER BY sales_agent;

-- Q11) Show the Invoice Total, Customer name, Country, and Sales Agent name for all invoices and customers.

SELECT  i.InvoiceId,
        c.LastName || ' ' || c.FirstName AS Client,
        c.Country,
        e.LastName || ' ' || e.FirstName AS Agent_name,
        i.Total
FROM customers c JOIN employees e 
    ON e.EmployeeId = c.SupportRepId
JOIN invoices i
    USING (CustomerId);

-- Q12)  How many Invoices were there in 2009?

SELECT  COUNT(*) AS Total_Invoices_2009
FROM invoices
WHERE InvoiceDate LIKE '2009%';

-- Q13) What are the total sales for 2009?

SELECT SUM(Total) AS Total_Sales_2009
FROM invoices
WHERE InvoiceDate LIKE '2009%';

-- Both previous together

SELECT COUNT(*) AS Quantity, SUM(Total) AS Total_Sales_2009 
FROM invoices 
WHERE InvoiceDate LIKE '2009%';

-- Q14) Write a query that includes the purchased track name with each invoice line ID.

SELECT  ii.InvoiceLineId,
        t.Name
FROM invoice_items ii JOIN tracks t
    USING (TrackId)
ORDER BY ii.InvoiceLineId;

-- Q15) Write a query that includes the purchased track name AND artist name with each invoice line ID.

SELECT ii.InvoiceLineId,
        t.Name AS Track,
        a.Name AS Artist
FROM invoice_items ii JOIN tracks t
    USING (TrackId)
JOIN albums alb 
    USING (AlbumId)
JOIN artists a
    USING (ArtistId)
ORDER BY ii.InvoiceLineId;

-- Q16) Provide a query that shows all the Tracks, and include the Album name, Media type, and Genre.

SELECT  a.Name AS Artist,
        t.Name AS Track,
        alb.Title AS Album,
        m.Name AS Media_type,
        g.Name AS Genre
FROM tracks t JOIN albums alb USING (AlbumId)
JOIN artists a USING (ArtistId)
JOIN media_types m USING (MediaTypeId)
JOIN genres g USING (GenreId);

-- Q16) Show the total sales made by each sales agent.

SELECT
  e.FirstName || ' ' || e.LastName AS sales_agent,
  ROUND(SUM(i.Total), 2) AS total_sales
FROM employees e
JOIN customers c
  ON e.EmployeeId = c.SupportRepId
JOIN invoices i
  ON c.CustomerId = i.CustomerId
GROUP BY e.EmployeeId
ORDER BY total_sales DESC;

-- Q17) Which sales agent made the most dollars in sales in 2009?

SELECT
  e.FirstName || ' ' || e.LastName AS sales_agent,
  ROUND(SUM(i.Total), 2) AS total_sales_2009
FROM employees e
JOIN customers c
  ON e.EmployeeId = c.SupportRepId
JOIN invoices i
  ON c.CustomerId = i.CustomerId
WHERE i.InvoiceDate LIKE '2009%'
GROUP BY e.EmployeeId
ORDER BY ROUND(SUM(i.Total), 2) DESC
LIMIT 1;
